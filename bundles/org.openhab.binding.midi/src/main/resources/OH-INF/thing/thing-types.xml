<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="midi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<bridge-type id="device">
		<label>MIDI Device</label>
		<description>MIDI Device</description>

		<channels>
			<channel id="sendChannelMessage" typeId="send-message"/>
			<channel id="sendSysexMessage" typeId="send-message"/>
			<channel id="receiveChannelMessage" typeId="receive-message"/>
			<channel id="receiveSysexMessage" typeId="receive-message"/>
		</channels>

		<representation-property>deviceid</representation-property>
		<config-description>
			<parameter name="deviceId" type="text" required="true">
				<label>Device ID</label>
				<description>ID of the MIDI device. Use "amidi -l" on Linux to show names of devices</description>
			</parameter>
		</config-description>
	</bridge-type>

	<bridge-type id="channel">
		<supported-bridge-type-refs>
			<bridge-type-ref id="device"/>
		</supported-bridge-type-refs>

		<label>MIDI Channel</label>
		<description>MIDI Channel</description>

		<channels>
			<channel id="noteOn" typeId="note-on"/>
			<channel id="noteOff" typeId="note-off"/>
			<channel id="controlChange" typeId="control-change"/>
			<channel id="programChange" typeId="program-change"/>
		</channels>

		<representation-property>channel</representation-property>
		<config-description>
			<parameter name="channel" type="integer" min="1" max="16" required="true">
				<label>Channel ID</label>
				<description>ID of the MIDI channel.</description>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="control-change">
		<supported-bridge-type-refs>
			<bridge-type-ref id="channel"/>
		</supported-bridge-type-refs>

		<label>MIDI Control Change Message</label>
		<description>MIDI Control Change Message</description>

		<channels>
			<channel id="value" typeId="control-change-value"/>
		</channels>

		<representation-property>ccNumber</representation-property>
		<config-description>
			<parameter name="ccNumber" type="integer" min="0" max="127" required="true">
				<label>Config Change Number</label>
				<description>ID of the MIDI channel.</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="send-message">
		<item-type>String</item-type>
		<label>Send Message</label>
		<description>Send a message to a MIDI device</description>
	</channel-type>

	<channel-type id="receive-message">
		<kind>trigger</kind>
		<label>Receive Message</label>
		<description>Receive a message from a MIDI device</description>
		<event/>
	</channel-type>

	<channel-type id="note-on">
		<item-type>Number</item-type>
		<label>Note On</label>
		<description>Note started playing</description>
		<state min="1" max="16" step="1"/>
	</channel-type>

	<channel-type id="note-off">
		<item-type>Number</item-type>
		<label>Note Off</label>
		<description>Note stopped playing</description>
		<state min="1" max="16" step="1"/>
	</channel-type>

	<channel-type id="control-change">
		<item-type>Number</item-type>
		<label>Control Change</label>
		<description>MIDI Control Change message number</description>
		<state min="0" max="127" step="1"/>
	</channel-type>

	<channel-type id="program-change">
		<item-type>Number</item-type>
		<label>Program Change</label>
		<description>MIDI Program Change message</description>
		<state min="0" max="127" step="1"/>
	</channel-type>

	<channel-type id="control-change-value">
		<item-type>Number</item-type>
		<label>Control Change Value</label>
		<description>MIDI Control Change value</description>
		<state min="0" max="127" step="1"/>
	</channel-type>

</thing:thing-descriptions>
